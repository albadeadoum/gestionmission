{% extends 'base.html.twig' %}

{% block title %}Signateur{% endblock %}

{% block body %}
    <div class="row align-items-start">
       <div class="col">
            <!-- Form Element sizes -->
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title">Signateurs</h3> {% if is_granted('ROLE_ADMIN') %} <a  style="float: right;" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMotoModal"><i class="fa-sharp fa-solid fa-plus"></i></a>
                {% endif %}
              </div>

            <table class="table table-striped table-bordered text-center">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Titre</th>
                        <th>Fonction</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for signateur in signateurs %}
                    <tr>
                        <td>{{ signateur.id }}</td>
                        <td>{{ signateur.nom }}</td>
                        <td>{{ signateur.titre }}</td>
                        <td>{{ signateur.fonction }}</td>
                        <td>
                            {#<a href="{{ path('app_signateur_show', {'id': signateur.id}) }}">show</a>
                            <a href="{{ path('app_signateur_edit', {'id': signateur.id}) }}">edit</a>#}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
    <!-- /.card-body -->
         </div>
          </div>
    </div>
   {# <a href="{{ path('app_signateur_new') }}">Create new</a>#}


   <!-- Modal Bootstrap -->
    <div class="modal fade" id="addMotoModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">Ajout signateur</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(form) }}
                        {{ form_widget(form, {'attr': {'id': 'BailleurForm'}}) }}
                        <button class="btn btn-success" style="margin-right: 10px;">{{ button_label|default('Enregistrer') }}</button>
                        <button type="reset" class="btn btn-secondary" style="float: right;">{{ button_label2|default('Vider') }}</button>
                    {{ form_end(form) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
