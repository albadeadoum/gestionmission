  <!-- PIED DE PAGE -->
  <div class="footer" style="padding: 5px 10px; font-size: 10px; ">
    <p style="margin:0;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        182, rue de la Sirba - BP 13416 Niamey - NIGER • Tél. : (227) 20 72 35 60 • 
        Fax : (227) 20 72 21 74 • http://www.ins.ne • E-mail : ins@ins.ne
    </p>
    <img src="{{ absolute_url(asset('im3.png')) }}" alt="Logo" 
