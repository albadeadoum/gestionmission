{% extends 'base.html.twig' %}

{% block title %}Kilometre index{% endblock %}

{% block body %}
    <h1>Kilometre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Kilometre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for kilometre in kilometres %}
            <tr>
                <td>{{ kilometre.id }}</td>
                <td>{{ kilometre.Nom }}</td>
                <td>{{ kilometre.kilometre }}</td>
                <td>
                    <a href="{{ path('app_kilometre_show', {'id': kilometre.id}) }}">show</a>
                    <a href="{{ path('app_kilometre_edit', {'id': kilometre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_kilometre_new') }}">Create new</a>
{% endblock %}
