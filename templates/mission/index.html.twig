{% extends 'base.html.twig' %}

{% block title %}Mission{% endblock %}

{% block body %}
    <div class="row align-items-start">
       <div class="col">
            <!-- Form Element sizes -->
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title">Missions</h3> {% if is_granted('ROLE_ADMIN') %}
                 <a  style="float: right;" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMotoModal"><i class="fa-sharp fa-solid fa-plus"></i></a>
                {% endif %}
              </div>
              <div class="card-body">

    <table class="table table-striped table-bordered text-center"  id="example1">
        <thead>
            <tr>
                <th>Numero</th>
                <th>Objet</th>
                <th>Bailleur</th>
                <th>nombres d'axe</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for mission in missions %}
            <tr>
                <td>{{ mission.id }}</td>
                <td>{{ mission.objet }}</td>
                <td>{{ mission.bailleur }}</td>
                <td><span class="status btn btn-secondary">{{ mission.axe|length }}</span></td>
                <td>
                    <a href="{{ path('app_for_mission_evenement', {'id': mission.id}) }}" class="btn "><i class="fa-solid fa-list fa-2xl" style="color: #4980df;"></i></a>
                    {#<a href="{{ path('app_mission_show', {'id': mission.id}) }}">show</a>#}
                    <a href="{{ path('app_mission_edit', {'id': mission.id}) }}" class="btn btn-secondary"><i class="fa-solid fa-pen-to-square"  ></i></a>
                    
                    <a class="btn">{{ include('mission/_delete_form.html.twig') }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
              <!-- /.card-body -->
         </div>
    </div>

<div class="modal fade" id="addMotoModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Creation d'une mission</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ form_start(form) }}
                    {{ form_widget(form, {'attr': {'id': 'AgentForm'}}) }}
                    <button class="btn btn-success" style="margin-right: 10px;">{{ button_label|default('Enregistrer') }}</button>
                    <button type="reset" class="btn btn-secondary" style="float: right;">{{ button_label2|default('Vider') }}</button>
                {{ form_end(form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

