{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<div class="row align-items-start">

                {% set currentYear = "now"|date("Y") %}
                {% set totalvehicule = 0 %}
                {% set totalmoto = 0 %}
                {% set totalmission = 0 %}
                {% set entretienCount = 0 %}
                {% set entretien = 0 %}
                {% for piece in pieces %}
                    {% set entretien = entretien + 1 %}
                {% endfor %}
                {% for evenement in evenements %}
                    
                        {% set totalmission = totalmission + 1 %}
                    
                {% endfor %}
                {% for vehicule in vehicules %}
                    
                        {% set totalvehicule = totalvehicule + 1 %}
                    
                {% endfor %}
                {% for moto in motos %}
                        {% set totalmoto = totalmoto + 1 %}
                {% endfor %}
         <div class="alert alert-info">
        <strong>Total mission  :</strong>{{ totalmission }}   <strong style="margin-left: 200px;">Total vehicule :</strong>{{ totalvehicule }} <br>
        <strong>Total des Entretiens :</strong>{{ entretien }}  <strong style="margin-left: 170px;">Total moto :</strong>{{ totalmoto }} <br>
                    
                
        </div>
        </div>
<div class="row align-items-start">
       <div class="col-6">
            <!-- Form Element sizes -->
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title">Calendrier des Missions</h3> <a href="{{ path('app_evenement_index') }}" style="float: right;" class="btn btn-primary"><i class="fa-solid fa-calendar-days"></i></a>
              </div>
              <div class="card-body">
                  <div id='calendrier' >
                </div>
              </div>
              <!-- /.card-body -->
         </div>
    </div>

     <div class="col-6">
            <!-- Form Element sizes -->
            <div class="card card-secondary">
              <div class="card-header">
              
                <h3 class="card-title">Missions</h3>
                
              </div>
              <div class="card-body">
                  <table class="table table-striped table-bordered text-center"  id="example3">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Objet</th>
                                    <th>Vehicule</th>
                                    <th>Chauffeur</th>
                                    <th>Début</th>
                                    <th>Fin</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for evenement in evenements %}
                                <tr>
                                        {% set currentDate = "now"|date("Y-m-d") %}
                                        {% set reservations = [] %}
                                        {% set enCours = [] %}
                                        {% set finis = [] %}
                                    <td data-order="{% if evenement.debut.format("Y-m-d") <= currentDate and currentDate <= evenement.fin.format("Y-m-d") %}1
                                        {% elseif evenement.fin.format("Y-m-d") <= currentDate and evenement.imageName is empty %}2
                                        {% elseif evenement.fin.format("Y-m-d") > currentDate %}3
                                        {% else %}4
                                        {% endif %}">
                                        
                                        {% if evenement.debut.format("Y-m-d") <= currentDate and currentDate <= evenement.fin.format("Y-m-d") %}
                                                <span class="status btn btn-success">En cours</span>
                                        {% elseif  evenement.fin.format("Y-m-d") > currentDate %}
                                                        <span class="status btn btn-warning">Provisoire </span>
                                        {% else %}
                                        {% if evenement.imageName is empty %}
                                                <span class="status btn btn-secondary">En attente de finalisation</span>
                                        {% else %}
                                                <span class="status btn btn-danger">Finie</span>
                                        {% endif %}
                                        {% endif %}
                                    </td>
                                    <td>{{ evenement.titre }}</td>
                                    <td>{{ evenement.Vehicule }}</td>
                                    <td>{{ evenement.Chauffeur }}</td>
                                    <td>{{ evenement.debut ? evenement.debut|date('d-m-Y') : '' }}</td>
                                    <td>{{ evenement.fin ? evenement.fin|date('d-m-Y') : '' }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="9">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
              </div>
              <!-- /.card-body -->
            </div>
     </div>
 </div>

 
   



   
    <!-- fullcalandra -->
           
   <script src="{{asset('assets/fullcalendar-6.1.6/dist/index.global.min.js')}}"></script>

        
            
     <script>
        window.onload = () => {
            let calendarElt = document.querySelector("#calendrier")
            let calendar = new FullCalendar.Calendar(calendarElt, {
                initialView: 'multiMonthYear',
                locale : 'fr',
                TimeZone :  'Europe/Paris',
                views: {
                    multiMonthFourMonth: {
                    type: 'multiMonth',
                    duration: { months: 4 }
                    }
                },
                 eventTimeFormat: {
                        hour: 'numeric',
                        minute: '2-digit',
                        omitZeroMinute: true,
                        meridiem: false
                    },
                
                    events: {{ data|raw }},
                    editable: true,
                    eventResizableFromStart: true,

                    headerToolbar: {
                      start: 'prev,next today',
                      center: '',
                      end: ''
                    },
                    

               

                   eventClick: function(info) {
                  // Récupérer les informations de l'événement
                  let eventTitle = info.event.title;
                  let eventStart = info.event.start;
                  let Activite = info.event.Vehicule;
                  let eventEnd = info.event.end;         
                  
                  // Afficher les informations dans une boîte de dialogue
                  alert(" : " + eventTitle + "\n" +
                        "Début : " + eventStart + "\n" +
                        "Fin : " + eventEnd);
                }
            });

            

            calendar.render()
        }
      </script>

{% endblock %}
